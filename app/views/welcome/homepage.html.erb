                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <% label_tag :message, "Message" %>
                                        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 text-center">
                                    <div id="success"></div>
                                    <%=submit_tag "Send", class: "page-scroll btn btn-xl"%>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        <% end %>
    </section>

