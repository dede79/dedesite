                    <h3 class="section-subheading text-muted">Send me a message and I'll get back to you within 24hrs:</h3>
                </div>
            </div>
            <%= form_tag("/welcome/thank_you") do %>
                <div class="row">
                    <div class="col-lg-12">
                        <form name="sentMessage" id="contactForm" novalidate>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <% label_tag :name, "Name" %>
                                        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
                                    </div>
                                    <div class="form-group">
                                        <% label_tag :email, "Email Address" %>
                                        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
                                    </div>
                                    <div class="form-group">
                                        <% label_tag :phone %>
